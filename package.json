{
  "name": "obelisk-ai",
  "version": "1.0.0",
  "description": "Obelisk AI - Assistente inteligente com sidebar moderna",
  "main": "scripts/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable --x64",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "ai",
    "assistant",
    "electron"
  ],
  "author": "Obelisk Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.obelisk.ai",
    "productName": "Obelisk AI",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/img/logo.png"
    },
    "portable": {
      "artifactName": "ObeliskAI-Portable.exe"
    },
    "nsis": {
      "artifactName": "ObeliskAI-Setup.exe",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!src/**/*",
      "!.git/**/*",
      "!dist/**/*"
    ]
  }
}
